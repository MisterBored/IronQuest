{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "IronQuest",
    "version": "1.2.2",
    "minimum-overwolf-version": "0.147",
    "author": "Darren S. White",
    "icon": "build/assets/icon-256x256.png",
    "icon_gray": "build/assets/icon-grayscale-256x256.png",
    "launcher_icon": "build/assets/icon.ico",
    "window_icon": "build/assets/icon-256x256.png",
    "description": "Quest planner for RuneScape"
  },
  "data": {
    "start_window": "controller",
    "externally_connectable": {
      "matches": ["http://api.ironquest.co.uk", "https://api.ironquest.co.uk"]
    },
    "force_browser": "user",
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [21594]
    },
    "hotkeys": {
      "toggle_IronQuest": {
        "title": "Show/Hide App",
        "action-type": "custom",
        "default": "Shift+F1"
      },
      "quit_IronQuest": {
        "title": "Relaunch App",
        "action-type": "custom",
        "default": "Shift+Escape"
      }
    },
    "protocol_override_domains": {"googlesyndication": "http"},
    "windows": {
      "controller": {
        "file": "build/controller.html",
        "background_optimization": false,
        "is_background_page": true
      },
      "results": {
        "file": "build/results.html",
        "show_in_taskbar": false,
        "transparent": false,
        "resizable": true,
        "block_top_window_navigation": true,
        "popup_blocker": true,
        "mute": true,
        "grab_keyboard_focus": true,
        "size": {
          "width": 1140,
          "height": 460
        },
        "min_size": {
          "width": 600,
          "height": 460
        },
        "start_position": {
          "top": 0,
          "left": 0
        }
      },
      "settings": {
        "file": "build/settings.html",
        "show_in_taskbar": false,
        "transparent": false,
        "resizable": true,
        "block_top_window_navigation": true,
        "popup_blocker": true,
        "mute": true,
        "grab_keyboard_focus": true,
        "size": {
          "width": 560,
          "height": 760
        },
        "min_size": {
          "width": 560,
          "height": 760
        },
        "start_position": {
          "top": 0,
          "left": 0
        }
      },
      "username": {
        "file": "build/username.html",
        "show_in_taskbar": false,
        "transparent": false,
        "resizable": true,
        "block_top_window_navigation": true,
        "popup_blocker": true,
        "mute": true,
        "grab_keyboard_focus": true,
        "size": {
          "width": 300,
          "height": 210
        },
        "min_size": {
          "width": 300,
          "height": 210
        },
        "start_position": {
          "top": 0,
          "left": 0
        }
      }
    }
  },
  "permissions": [
    "Extensions",
    "GameInfo",
    "Hotkeys",
    "Profile",
    "Streaming",
    "Tray"
  ]
}
